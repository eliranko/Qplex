<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <variable name="logDirectory" value="${basedir}/logs/${shortdate}"/>
  
  <targets async="true">
    <target name="console" xsi:type="Console" />
    <target name="log2console" xsi:type="NLogViewer" address="udp4://localhost:7071"/>
    <target name="logfile" xsi:type="File" fileName="${logDirectory}/QplexLog.txt" layout="${date:format=yyyyMMddHHmmss} ${message}"/>
  </targets>

  <rules>
    <logger name="*" minlevel="Trace" writeTo="console,log2console,logfile" />
  </rules>
</nlog>